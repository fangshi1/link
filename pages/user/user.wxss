/* pages/user/user.wxss */
.user_max{
  width: 100%;
  height: auto;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 25rpx;
  border-top:1px solid #ebebeb; 
}
.user_list{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-bottom: 1px solid #ebebeb;
  padding: 30rpx 0 20rpx 0;
}
.arrow{
  width: 25rpx;
  height: 25rpx;
}
.user_img{
  width: 15%;
  height: auto;
  overflow: hidden;
  float: left;
}
.user_img image{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-radius:100px; 
}

.user_title{
  width: 70%;
  height: auto;
  overflow: hidden;
  float: left;
  margin: 0 2.5%;
}

.user_title_text{
  font-size: 32rpx;
  font-weight: bold;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;

}
.user_title_desc{
  font-size: 26rpx;
  width: 100%;
  color: #666;

}
.user_go{
  width: 10%;
  height: auto;
  overflow: hidden;
  float: left;
  text-align: center;
  line-height: 100rpx;
  font-family: "宋体";
}








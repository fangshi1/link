/* pages/user_list/user_list.wxss */
page{
  background: #f5f5f5;
}
.header_now{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 35rpx 0 5rpx 0;
  border-top: 2rpx solid #f5f5f5;  
  background: #fff;
  margin-bottom: 15rpx;

}
.header_left{
  float:left;
  width:70px;
  height:70px;
  border-radius:50%;
  overflow:hidden;
  margin:10px 20rpx 10px 20px;


}
.xiala{
  width: 100%;
  height: 80rpx;
  text-align: center;
}
.xiala image{
  width: 80rpx;
  height: 80rpx;
}
.header_left image{
  width: 100%;
  height: 100%;
}
.header_right{
  float: left;
  width: 62%;
  height: 80px;
  margin-left: 1%;
  line-height: 60px;
  font-size: 16px;
  font-weight: bold;
  overflow: hidden;
}
.user_name{
  max-width: 70%;
  display: block;
  height: 100rpx;
  float: left;
  overflow: hidden;
  /*文本不换行*/
  white-space: nowrap;
  /*文字超出用省略号*/
  text-overflow: ellipsis;

}
.header_suaxin{
  font-size: 14px;
  float: right;
  margin-right: 30rpx;
  line-height: 80px;
  border: 0 !important;
  background-color: #fff;
  display: none;
}
.no_downline{
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  text-align: center;
  color: #666;
}
.fengxiang{
  width:70%;
height:auto;
overflow:hidden;
margin-left:28.5%;
font-size:14px;
position:relative;
top:-70rpx;
line-height:60rpx;


}
.arrow{
  width: 25rpx;
  height: 25rpx;
}
.yangshi{
  color: #5aa3e0;
}
.user_ltitle{
  display: inline-block;
  padding: 0 10rpx;
  background: #5aa3e0;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  font-family: "宋体";
  border-radius: 7rpx; 
  margin-left: 10rpx;
  font-weight: 100;
  position: relative;
  top: -6rpx;
}
.phone{
  width: 20rpx;
  margin-right: 20rpx;
  position: relative;
  top: 2px;
}
.user_desc{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 25rpx 100rpx 25rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #fff;

}
.user_desc_list{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #f5f5f5; 

}
.user_desc_text{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #555;
}







